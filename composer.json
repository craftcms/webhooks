{
  "name": "craftcms/webhooks",
  "description": "Post webhooks when events are triggered in Craft CMS.",
  "type": "craft-plugin",
  "keywords": [
    "html",
    "cms",
    "craftcms",
    "webhooks",
    "yii2"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Pixel & Tonic",
      "homepage": "https://pixelandtonic.com/"
    }
  ],
  "support": {
    "email": "support@craftcms.com",
    "issues": "https://github.com/craftcms/webhooks/issues?state=open",
    "source": "https://github.com/craftcms/webhooks",
    "docs": "https://github.com/craftcms/webhooks/blob/master/README.md",
    "rss": "https://github.com/craftcms/webhooks/commits/master.atom"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.0.2",
    "craftcms/cms": "^4.0.0-RC2|^5.0.0-beta.1"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main",
    "craftcms/rector": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "craft\\webhooks\\": "src/"
    }
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "extra": {
    "name": "Webhooks",
    "handle": "webhooks",
    "documentationUrl": "https://github.com/craftcms/webhooks/blob/master/README.md"
  },
  "config": {
    "platform": {
      "php": "8.0.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}
